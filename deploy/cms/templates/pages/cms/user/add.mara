card.col-1_2:
	header: "Adicionar usuário"
	form: {"action":"#{@apiPath}cms/user/edit","success":"cms/users"}
		content:
			group:
				field.col-1_2:
					label: "Nível"
					select: {"service": "#{@apiPath}cms/user/getRoles", "name":"role"}
