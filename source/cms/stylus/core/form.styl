form
	position: relative
input
	font-family: Tahoma
	border-width: 1px
	border-style: solid
	border-color: #CCCCCC
	font-size: 1em
	padding: 0.2em
	outline: 0
	width: 300px
	&:focus
		border-color: #666666

button
	font-family: helveticaneue
	font-weight: bold
	border-width: 1px
	border-style: solid
	border-color: #CCCCCC
	background-color: #FFFFFF
	outline: 0
	font-size: 1em
	cursor: pointer

select
	padding: 4px 8px
	min-width: 215px
	height: 29px
	-webkit-appearance: menulist-button
	
field
	display: block
	margin-top: 0.5em
	label
		display: block


for i in (1...length(bg-colors) + 1)
	button.p{i}
		generateColor(i - 1)
		border-width: 1px
	