showAnimation(type, direction, distance = 30%, initialOpacity = 0)
	x = 0
	y = 0
	if direction == 'up'
		y = distance
	else if direction == 'down'
		y = distance * -1
	else if direction == 'left'
		x = distance
	else if direction == 'right'
		x = distance * -1
	name = type + '-' + direction
	@keyframes name
		from
			transform: translate(x, y)
			opacity: initialOpacity
		to
			transform: translate(0, 0)
			opacity: 1
showAnimation('show', '--', 0, 0)
showAnimation('show', 'up')
showAnimation('show', 'down')
showAnimation('show', 'left')
showAnimation('show', 'right')
showAnimation('slide', 'up', 100%, 1)
showAnimation('slide', 'down', 100%, 1)
showAnimation('slide', 'right', 100%, 1)
showAnimation('slide', 'left', 100%, 1)

