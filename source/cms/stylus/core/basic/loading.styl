loading
	@extend .no-select
	position: absolute
	display: block
	top: 0px
	left: 0px
	bottom: 0px
	right: 0px
	z-index: 100
	.progress-bar
		position: absolute
		top: 0px
		left: 0px
		height: 4px
		background-color: _color_secondary_light
		width: 100%
	.background
		background-color: rgba(255, 255, 255, 0.6)
		position: absolute
		opacity: 0
		top: 0px
		left: 0px
		bottom: 0px
		right: 0px
	&.disabled
		pointer-events: none
