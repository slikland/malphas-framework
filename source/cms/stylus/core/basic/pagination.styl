pagination
	@extend .no-select
	max-width: 100%
	&>*
		vertical-align: middle
	a
		padding: 0.4em 0.6em
		&:hover, &.hover
			background-color: #FF0000
	&.seeking
		.shadow-left, .shadow-right
			opacity: 0
		.wrapper
			transition: box-shadow 0.1s
			box-shadow: 0 2px 2px 0 rgba(0,0,0,.14),0 3px 1px -2px rgba(0,0,0,.2),0 1px 5px 0 rgba(0,0,0,.12)
	.wrapper
		width: calc(100% - 8em)
		display: inline-block
		
		overflow-x: hidden
		.page-container
			padding: 0.4em 0
			overflow: hidden
			width: 100%
			
		.shadow-left, .shadow-right
			position: absolute
			top: 0
			bottom: 0
			width: 2em
			pointer-events: none
		.shadow-left
			left: 0px
			background: linear-gradient(left, #FFFFFF, rgba(255, 255, 255, 0))
		.shadow-right
			right: 0px
			background: linear-gradient(right, #FFFFFF, rgba(255, 255, 255, 0))

	.arrow
		display: inline-block
		i
			@extend .fa
			width: auto
			vertical-align: baseline
	.first
		i
			@extend .fa-angle-double-left
	.prev
		i
			@extend .fa-angle-left
	.next
		i
			@extend .fa-angle-right
	.last
		i
			@extend .fa-angle-double-right
