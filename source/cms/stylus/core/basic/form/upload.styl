upload
	margin-top: 0.4em
	display: inline-block
	width: 100%
	height: 5em
	background-color: rgba(0, 0, 0, 0.1)
	border: 2px dashed rgba(0, 0, 0, 0.2)
	padding: 0em
	cursor: pointer
	&.accept
		background-color: getColor(5, 10, 0.3)
		border-color: getColor(5, 5, 0.4)
	&.deny
		background-color: getColor(1, 10, 0.3)
		border-color: getColor(1, 5, 0.4)
		
	.delete-btn
		display: none
		position: absolute
		z-index: 1
		top: 0px
		right: 0px
		background-color: rgba(255, 255, 255, 0.4)
		&:hover
			background-color: rgba(255, 255, 255, 0.8)
		i
			padding: 0.4em
	.container
		padding: 1em
		width: 100%
		height: 100%
		&>*
			pointer-events: none

		placeholder
			@extend .center-content
			&>*
				text-align: center
			display: inline-block
			width: 100%
			height: 100%
			
			
		preview
			display: none
			width: 100%
			height: 100%
			max-width: 100%
			max-height: 100%
	&.showPreview
		.delete-btn
			display: block
		placeholder
			display: none
		preview
			display: inline-block

