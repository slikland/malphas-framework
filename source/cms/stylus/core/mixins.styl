inline()
	display: inline
inline-block()
	display: inline-block

.left
	float: left
.right
	float: right
.center-content
	text-align: center
	&:before
		content: ''
		vertical-align: middle
		display: inline-block
		height: 100%
	>*
		display: inline-block
		text-align: initial
		float: none !important
		vertical-align: middle !important
		
.no-select
	-webkit-touch-callout: none
	-webkit-user-select: none
	-khtml-user-select: none
	-moz-user-select: none
	-ms-user-select: none
	user-select: none

.hidden
	visibility: hidden
	display: none
.nowrap
	white-space: nowrap

bg-colors = (#d9534f #f0ad4e #5bc0de #337ab7 #5cb85c)

generateColor(index, lightenAmount = 0)
	color = bg-colors[index]
	if lightenAmount != 0
		color = lighten(color, lightenAmount)
	background-color: color
	border-style: solid
	border-color: darken(color, 5%)
	if lightness(color) > 75%
		color: #666666
	else
		color: #FFFFFF
generateTextColor(index, lightenAmount = 0)
	color = bg-colors[index]
	color: color
