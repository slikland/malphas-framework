body > header
	box-shadow: 0 2px 2px 0 rgba(0,0,0,.14),0 3px 1px -2px rgba(0,0,0,.2),0 1px 5px 0 rgba(0,0,0,.12)
	height: headerHeight
	background-color: #607d8b
	z-index: 1
	display: table
	width: 100%
	h1
		@extend h3
		font-weight: 400
		color: #FFFFFF
		line-height: headerHeight
		padding: 0 0.4em
		display: table-cell
		
	aside
		text-align: right
		display: table-cell
		vertical-align: middle
		&>*
			vertical-align: middle
		span
			margin: 0 0.5em
