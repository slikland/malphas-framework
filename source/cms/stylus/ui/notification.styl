notification, .notification-item
	position: absolute
	z-index: 99999
	width: 100%
	opacity: 0.9
	top: 0px
.notification-item
	box-sizing: border-box
	font-size: 0.8em
	font-family: tahoma
	padding: 8px
	
	.closeBtn
		float: right
		cursor: pointer
		&:hover
			color: #000000
		

	for i in (1...length(bg-colors) + 1)
		&.p{i}
			generateColor(i - 1, 80%)
			border-width: 1px
		