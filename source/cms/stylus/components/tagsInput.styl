.tag-container
	width: 100%
	background: #f4f4f4
	padding: 10px 5px
	min-height: 30px
	.tag-content
		display: inline-block
		padding: 7px 9px
		margin: 5px 5px
		background: #FFFFFF
		-webkit-border-radius: 5px
		-moz-border-radius: 5px
		border-radius: 5px
		i
			margin-top:-1px
			color: #ff0000
			cursor:pointer
		i:hover
			color:#ff4545

.search-tag
	position: absolute
	bottom: 90px
	left: 0
	width:100%
	min-height:100px
	background: #000000
	z-index: 9999
	p
		padding:5px 10px
		color:#FFFFFF
		font-size:13px